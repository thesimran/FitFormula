<?xml version="1.0" encoding="utf-8"?>  
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <TableLayout
        android:id="@+id/fitness_test_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:shrinkColumns="true"
        android:padding="10dip"
        
         >
	
        <TableRow>
            <TextView
                android:id="@+id/instructions"
                android:text="@string/instructions_string"
                android:textSize="18dip"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:textStyle="bold"
                android:gravity="center"
                 />
        </TableRow>
        
        <TableRow>

            <TextView
                android:textSize="16dip"
                android:id="@+id/gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
          	    android:text="@string/gender_string" />
            
            <RadioGroup
                android:id="@+id/gender_radio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/male"
                    android:checked="true"
                    android:text="@string/male_str" />

                <RadioButton
                    android:id="@+id/female"
                    android:checked="false"
                    android:text="@string/female_str" />

            </RadioGroup>
            
           
        </TableRow>

        <TableRow>

            <TextView
                android:textSize="16dip"
                android:id="@+id/age_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/age_string" />

            <EditText
                android:id="@+id/age"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"  
                android:hint="@string/enter_age"
                android:inputType="number"
                android:maxLength="2"
                />
        </TableRow>
        <TableRow>

            <TextView
                android:textSize="16dip"
                android:id="@+id/height_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/height_string" />

            <EditText
                android:id="@+id/height"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="@string/enter_height"
                android:inputType="number"
                android:maxLength="3" />
        </TableRow>
        <TableRow>

            <TextView
                android:textSize="16dip"
                android:id="@+id/weight_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/weight_string" />

            <EditText
                android:id="@+id/weight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="@string/enter_weight"
                android:inputType="number"
                android:maxLength="3" />
        </TableRow>

        <TableRow>

            <TextView
                android:textSize="16dip"
                android:id="@+id/hypertension_label"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="@string/hypertension_string" />

            <RadioGroup
                android:id="@+id/hypertension_radio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/hyp_no"
                    android:checked="true"
                    android:text="@string/no" />

                <RadioButton
                    android:id="@+id/hyp_yes"
                    android:checked="false"
                    android:text="@string/yes" />

            </RadioGroup>
            
        </TableRow>

        <TableRow>

            <TextView
                android:textSize="16dip"
                android:id="@+id/smoking_label"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="@string/smoking_string" />

            <RadioGroup
                android:id="@+id/smoking_radio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/smoke_no"
                    android:checked="true"
                    android:text="@string/no" />

                <RadioButton
                    android:id="@+id/smoke_yes"
                    android:checked="false"
                    android:text="@string/yes" />

            </RadioGroup>
          
        </TableRow>

        <TableRow>

            <TextView
                android:textSize="16dip"
                android:id="@+id/diabetes_label"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="@string/diabetes_string" />

            <RadioGroup
                android:id="@+id/diabetes_radio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/diabetes_no"
                    android:checked="true"
                    android:text="@string/no" />

                <RadioButton
                    android:id="@+id/diabetes_yes"
                    android:checked="false"
                    android:text="@string/yes" />

            </RadioGroup>
           
        </TableRow>

        <TableRow>

            <TextView
                android:textSize="16dip"
                android:id="@+id/blood_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/blood_string"
                 />

            <RadioGroup
                android:id="@+id/blood_radio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/blood_no"
                    android:checked="true"
                    android:text="@string/no" />

                <RadioButton
                    android:id="@+id/blood_yes"
                    android:checked="false"
                    android:text="@string/yes" />
            </RadioGroup>
        </TableRow>
        
		<TableRow android:id="@+id/blood_row">

            <TextView
                android:textSize="16dip"
                android:id="@+id/blood_label_no"
                android:layout_width="0dp"
                android:layout_height="55dip"
                android:layout_weight="0.5"
                android:text="@string/blood_string_no"
                 />

            <Spinner 
                android:id="@+id/blood_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:drawSelectorOnTop="true" />
                   
            <EditText
                android:id="@+id/blood_entry"
                android:layout_width="0dp"                
                android:layout_height="wrap_content"
                android:layout_weight="0.5"  
                android:hint="@string/enter_bp"
                android:inputType="number"
                android:maxLength="3"
                android:visibility="gone"
                />
            
        </TableRow>
        <!--  
        <TableRow>
            <TextView
                android:textSize="16dip"
                android:id="@+id/know_resting_hr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/know_hr_str" 
                android:layout_marginTop="6dip"/>
            	
            
             <RadioGroup
                android:id="@+id/hr_radio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/hr_no"
                    android:checked="true"
                    android:text="@string/no" />

                <RadioButton
                    android:id="@+id/hr_yes"
                    android:checked="false"
                    android:text="@string/yes" />
            </RadioGroup>
            
        </TableRow>
       --> 
        <TableRow
           android:paddingBottom="25dip">
            <TextView
                android:textSize="16dip"
                android:id="@+id/resting_hr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/enter_hr"
                />
            
            <EditText
                android:id="@+id/hr_entry"
                android:layout_width="0dp"                
                android:layout_height="wrap_content"
                android:layout_weight="0.5"  
                android:inputType="number"
                android:maxLength="3" />
        </TableRow>
       	<TableRow android:id="@+id/how_much_excercise">

            <TextView
                android:textSize="16dip"
                android:id="@+id/how_much_excercise_label"
                android:layout_width="0dp"
                android:layout_height="150dip"
                android:layout_weight="0.5"
                android:text="@string/how_much_exercise_str"
                 />

            <Spinner 
                android:id="@+id/exercise_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginTop="55dip"
                android:drawSelectorOnTop="true"
                android:entries="@array/excercise_array_str"
		    	android:entryValues="@array/exercise_mins_values"
		    	android:defaultValue="30" />
            
        </TableRow>
        
        <TableRow>

            <Button
                android:id="@+id/fit_test_next_but"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/next_str"
                android:onClick="nextPushed"
                android:layout_marginTop="25dip"
                android:layout_marginBottom="25dip" />
        </TableRow>
        
    </TableLayout>

</ScrollView> 