<?xml version="1.0" encoding="utf-8"?>  
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:shrinkColumns="true"
         >
	
        <TableRow>
            <TextView
                android:id="@+id/instructions"
                android:text="@string/instructions_string"
                android:textSize="15dip"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:textStyle="bold" />
        </TableRow>
        
        <TableRow>

            <TextView
                android:id="@+id/gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
          	    android:text="@string/gender_string" />
            
            <RadioGroup
                android:id="@+id/gender_radio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/male"
                    android:checked="true"
                    android:text="@string/female_str" />

                <RadioButton
                    android:id="@+id/female"
                    android:checked="false"
                    android:text="@string/male_str" />

            </RadioGroup>
            
            <!--  
            <Spinner
                android:id="@+id/gender_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:prompt="@string/gender_prompt" /> -->
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/age_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/age_string" />

            <EditText
                android:id="@+id/age"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"  
                android:hint="@string/enter_age"
                android:inputType="number"
                android:maxLength="2"
                />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/height_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/height_string" />

            <EditText
                android:id="@+id/height"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="@string/enter_height"
                android:inputType="number"
                android:maxLength="3" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/weight_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/weight_string" />

            <EditText
                android:id="@+id/weight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="@string/enter_weight"
                android:inputType="number"
                android:maxLength="3" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/hypertension_label"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="@string/hypertension_string" />

            <RadioGroup
                android:id="@+id/hypertension_radio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/hyp_no"
                    android:checked="true"
                    android:text="@string/no" />

                <RadioButton
                    android:id="@+id/hyp_yes"
                    android:checked="false"
                    android:text="@string/yes" />

            </RadioGroup>
            <!--  
            <Spinner
                android:id="@+id/hypertension_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" /> -->
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/smoking_label"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="@string/smoking_string" />

            <RadioGroup
                android:id="@+id/smoking_radio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/smoke_no"
                    android:checked="true"
                    android:text="@string/no" />

                <RadioButton
                    android:id="@+id/smoke_yes"
                    android:checked="false"
                    android:text="@string/yes" />

            </RadioGroup>
           <!--   
            <Spinner
                android:id="@+id/smoking_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" /> -->
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/diabetes_label"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="@string/diabetes_string" />

            <RadioGroup
                android:id="@+id/diabetes_radio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/diabetes_no"
                    android:checked="true"
                    android:text="@string/no" />

                <RadioButton
                    android:id="@+id/diabetes_yes"
                    android:checked="false"
                    android:text="@string/yes" />

            </RadioGroup>
           <!--   
            <Spinner
                android:id="@+id/diabetes_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" /> -->
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/blood_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/blood_string" />

            <RadioGroup
                android:id="@+id/blood_radio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/blood_no"
                    android:checked="true"
                    android:text="@string/no" />

                <RadioButton
                    android:id="@+id/blood_yes"
                    android:checked="false"
                    android:text="@string/yes" />
            </RadioGroup>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/start_fit_test"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/start_fit_test_string"
                android:onClick="startTestPushed"
                android:layout_marginTop="25dip"
                android:layout_marginBottom="25dip" />
        </TableRow>
    </TableLayout>

</ScrollView> 